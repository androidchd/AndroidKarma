<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="170dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#3061e5"
                android:paddingBottom="10dp"
                android:text="Booking Cancelled"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/cancellbooking"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"

                android:text="Your booking has been cancelled.Your refund will be processed within 3 working days . You will receive update on your refund processed on your registered phone and email."
                android:textAlignment="center"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/ok"

                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/buttonstyle4"
                android:gravity="center"
                android:text="OK"
                android:textColor="#FFFFFF"

                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>