<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="170dp"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="100">
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="100">
       <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_weight="3">
       <Button 
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:background="#3061e5"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Player Details" />
       </LinearLayout>
   
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33"
        android:weightSum="2"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:id="@+id/cancellbooking"
           android:textSize="12sp"
           
            android:text="No of Members"/>
         <EditText
            android:layout_width="0dp"
            android:id="@+id/members"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
           android:inputType="number"
            android:gravity="center"
            android:textSize="12sp"
          />

</LinearLayout> 
 <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="33"
        android:weightSum="2"
        >
        <TextView 
           android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:id="@+id/nonmemebrs"
           
            android:textSize="12sp"
            android:text="No of Non Members"/>
         <EditText
            android:layout_width="0dp"
            android:id="@+id/nonmembers"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
           android:inputType="number"
            android:gravity="center"
            android:textSize="14sp"
          />

</LinearLayout>  
    
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
    android:weightSum="2"
    
       android:layout_weight="30">
  
 <Button 
        android:id="@+id/ok"
        
       android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/buttonstyle4"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
     
        android:text="OK" />
  <Button 
        android:id="@+id/cancel"
        android:layout_marginRight="20dp"
       android:layout_weight="1"
       android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#595963"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
       android:layout_marginTop="10dp"
        android:text="Cancel" />
</LinearLayout>

</LinearLayout>
</LinearLayout>
